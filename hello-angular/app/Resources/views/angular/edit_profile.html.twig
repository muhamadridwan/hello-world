{% extends 'base.html.twig' %}
{% block body %}

<!--<ul class=entries>-->
<div class="container-fluid" ng-controller="ExpEditProfileCtrl" style="padding:20px;">

    <form name="profileForm">
        <div class="row-fluid">
            <div class="span3">
                <img class="img-thumbnail" width="200em" ng-src="{[{getGravatarUrl(user);}]}" alt="image"/><br/><br/>
            </div>
            <div class="span3">
                <fieldset>
                    <label for="userName">User Name : </label><br/>
                    <input focus id="userName" required ng-pattern="/^[A-Za-z0-9][2,20]$/" type="text" placeholder="Username" ng-model="user.username"/><br/>
                    <label for="password">Password : </label><br/>
                    <input id="password" required type="password" placeholder="Password" ng-model="user.password"/><br/>
                </fieldset><br/>
                <div style="margin-top:15px">
                    <fieldset>
                        <label for="name">Name : </label><br/>
                        <input type="text" id="name" placeholder="Name" ng-model="user.name"/><br/>
                        <label for="emailAddress">Email Address : </label><br/>
                        {[{user.emailAddress}]}<br/>
                        <input id="emailAddress" type="email" placeholder="Email Address" ng-model="user.emailAddress" /><br/>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6 offset3">
                <label for="bio">Bio : </label><br/>
                <textarea id="bio" rows="6" cols="50" style="color:#52575c;" placeholder="Bio" ng-model="user.bio"></textarea>
            </div>
        </div>

        <button type="submit"  ng-disabled="editProfileForm.$invalid" ng-click="saveUser(user,editProfileForm)" class="btn btn-primary">Save</button>
        <button type="submit" ng-click="cancelEditUser(user,editProfileForm)" class="btn btn-default">Cancel</button>
    </form>
</div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{asset('bundles/js/services/GravatarUrlBuilder.js')}}"></script>
    <script type="text/javascript" src="{{asset('bundles/js/controllers/ExpEditProfileCtrl.js')}}"></script>
{% endblock %}
